{
  "name": "@roster-manager/database",
  "version": "0.0.0",
  "private": true,
  "description": "Database schema and migrations for roster-manager",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "drizzle-orm": "^0.36.0",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@roster-manager/tsconfig": "workspace:*",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.28.0",
    "typescript": "^5.6.3"
  }
}
