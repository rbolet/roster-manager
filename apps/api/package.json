    "@roster-manager/contracts": "workspace:*",
    "@roster-manager/database": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.36.0",
    "fastify": "^5.0.0",
    "fastify-type-provider-zod": "^6.0.0",
    "postgres": "^3.4.4",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@roster-manager/tsconfig": "workspace:*",
    "@types/node": "^22.7.5",
