{
  "name": "@roster-manager/api",
  "version": "0.0.0",
  "private": true,
  "description": "REST API server for roster-manager",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
